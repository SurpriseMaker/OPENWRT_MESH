START=80
STOP=90

USE_PROCD=1

PROG=/usr/sbin/simcom

start_service() {
	procd_open_instance
	procd_set_param command $PROG
	procd_set_param respawn
	procd_close_instance
}

stop_service() {
	service_stop /usr/sbin/simcom
}

restart() {
    stop
    start
}

shutdown() {
    stop
}
